<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.001"
        android:background="@drawable/splash" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/regsister_button_selector"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_forgotPassword"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_register"
        android:layout_marginTop="30dp"
        android:background="@color/forgotButton_backgroundcolor"
        android:text="Forgotten Password?"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_forgotPassword"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button_selector"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/relative_center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/tv_asqpos"
        android:layout_below="@+id/btn_forgotPassword"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/btn_login"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/view_center"
            android:src="@drawable/lock" />

        <EditText
            android:id="@+id/edt_userpassword"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_lock"
            android:background="@color/transparent"
            android:hint="Password"
            android:textColor="@color/splashScreen_smallTextColor"
            android:padding="10dp"
            android:textSize="22sp" />

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/dark_grey" />

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/view_center"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_user"
            android:background="@color/transparent"
            android:hint="Username"
            android:textColor="@color/splashScreen_smallTextColor"
            android:padding="10dp"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/btn_forgotPassword"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/relative_center"
        android:background="@color/white" />

    <TextView
        android:textColor="@color/splashScreen_largeTextColor"
        android:id="@+id/tv_asqpos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="ASQ POS"
        android:textSize="105sp" />

</RelativeLayout>