<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" >

        <TextView
            android:id="@+id/alldeleteNewOrders"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/acept_button_selector"
            android:gravity="center"
            android:text="All"
            android:textColor="@color/accept_reject_text_selector"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Wed/09/02/2015"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal" >

        <android.support.v4.view.ViewPager
            android:id="@+id/myviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linear_scrollLeftButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/grey"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/triangle_leftgrey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_scrollRightButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="0.5"
            android:background="@color/grey"
            android:gravity="center"
            android:orientation="horizontal" >

           <LinearLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/triangle_grey" />
        </LinearLayout>

        <TextView
            android:id="@+id/linear_deleteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/acept_button_selector"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/accept_reject_text_selector"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/linear_CancelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/acept_button_selector"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/accept_reject_text_selector"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>