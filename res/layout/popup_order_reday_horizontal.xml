<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle"
    android:orientation="vertical"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/purple_OrderStatus_selected"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_Orderstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/tv_orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ready ?"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/yes_Orderready"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/purple_yes_no_selector"
            android:text="Yes"
            android:textColor="@color/yes_no_text_seslcetor" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/No_Orderready"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/purple_yes_no_selector"
            android:text="No"
            android:textColor="@color/yes_no_text_seslcetor" />
    </LinearLayout>
