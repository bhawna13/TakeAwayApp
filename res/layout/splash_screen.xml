<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_asq_pos"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Hello ! Welcome to"
        android:textColor="@color/splashScreen_smallTextColor"
        android:textSize="@dimen/splash_smalltextsize" />

    <TextView
        android:id="@+id/tv_asq_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="ASQ POS"
        android:textColor="@color/splashScreen_largeTextColor"
        android:textSize="@dimen/splash_textsize" />

</RelativeLayout>