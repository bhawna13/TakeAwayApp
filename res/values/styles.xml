<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="calculator_Style">
        <item name="android:background">@drawable/rounded_rectangle_white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="backgroundstyle">
        <item name="android:background">@drawable/rounded_rectangle_white</item>
    </style>

    <!-- dataReport Fragment -->
    <style name="data_report_tab_today_style">
        <item name="android:layout_width">@dimen/datareport_tab_width</item>
        <item name="android:layout_height">@dimen/datareport_tab_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/dr_today_background_selector</item>
        <item name="android:textColor">@color/dr_date_text_color</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="data_report_tabs_style">
        <item name="android:layout_width">@dimen/datareport_tab_width</item>
        <item name="android:layout_height">@dimen/datareport_tab_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/dr_rounded_square_normal</item>
    </style>

    <style name="dr_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="data_report_tabs_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/dr_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="dr_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/dr_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dr_text_color</item>
    </style>

    <style name="dr_button_time_bottom_style">
        <item name="android:layout_width">@dimen/dr_min_width</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">@dimen/dr_min_height</item>
        <item name="android:background">@drawable/dr_delete_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dr_text_color</item>
    </style>

    <style name="dr_button_time_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="dr_listview_Headear_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/dr_listview_header</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dr_paymentTypeTabs_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/dr_header_tabs_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dr_text_color</item>
    </style>

    <style name="dr_dropdown_txt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dr_dropdown_height</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dr_text_color</item>
    </style>

    <style name="dr_listview_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/dr_listview_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="dr_listview_order_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>